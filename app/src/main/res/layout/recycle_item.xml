<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:id="@+id/collectionSheet"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/one"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:background="@color/purple_700"
        android:padding="5dp"
        android:text="Action"
        android:textColor="@color/white" />

    <TextView
        android:gravity="center"
        android:id="@+id/two"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_toRightOf="@+id/one"
        android:layout_weight="1"
        android:layout_marginStart="30dp"
        android:layout_width="wrap_content"
        android:text="Loan Coll"
        android:textColor="@color/black" />

    <TextView
        android:gravity="center"
        android:id="@+id/three"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_toRightOf="@+id/two"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:text="GS"
        android:textColor="@color/black" />

    <TextView
        android:gravity="center"
        android:id="@+id/four"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_toRightOf="@+id/three"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:text="VS"
        android:textColor="@color/black" />

    <TextView
        android:gravity="center"
        android:id="@+id/five"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_toRightOf="@+id/four"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:text="DPS"
        android:textColor="@color/black" />

    <CheckBox
        android:gravity="center"
        android:id="@+id/six"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/five"
        android:layout_width="wrap_content" />

    <TextView
        android:gravity="center"
        android:id="@+id/seven"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="15dp"
        android:layout_toRightOf="@+id/six"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:text="C"
        android:textColor="@color/black" />

    <TextView
        android:gravity="center"
        android:id="@+id/eight"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:layout_toRightOf="@+id/seven"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:text="C.PA"
        android:textColor="@color/black" />

    <TextView
        android:gravity="center"
        android:id="@+id/nine"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:layout_toRightOf="@+id/eight"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:text="C.SC"
        android:textColor="@color/black" />

    <TextView
        android:gravity="center"
        android:id="@+id/ten"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_toRightOf="@+id/nine"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:text="PA.Rec"
        android:textColor="@color/black" />

    <TextView
        android:gravity="center"
        android:id="@+id/eleven"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:layout_marginStart="35dp"
        android:layout_toRightOf="@+id/ten"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:text="SC.Rec"
        android:textColor="@color/black" />

    <TextView
        android:gravity="center"
        android:id="@+id/twelve"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_toRightOf="@+id/eleven"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:text="Ttl.Rec"
        android:textColor="@color/black" />

    <TextView
        android:gravity="center"
        android:id="@+id/thirteen"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_toRightOf="@+id/twelve"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:text="PA.Due"
        android:textColor="@color/black" />




</LinearLayout>